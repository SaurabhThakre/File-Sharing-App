<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:columnCount="1"
    android:gravity="center_horizontal"
    android:useDefaultMargins="false"
    android:rowCount="14"
    tools:context=".MainActivity"
    android:background="@drawable/grad_but"
    android:fontFamily="sans-serif-condensed"
    android:alignmentMode="alignBounds"
    android:padding="0dp"
    android:orientation="vertical">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge" android:id="@+id/mainText"
        android:layout_gravity="center_horizontal"
        android:textColor="#f6f4ff"
        android:textSize="30dp"
        android:fontFamily="@font/aclonica" />


    <LinearLayout
        android:id="@+id/wifiGrid"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:orientation="horizontal"
        android:gravity="center_horizontal"
        android:layout_marginBottom="30dp">

        <Button
            android:id="@+id/buttonCreate"
            android:layout_width="155dp"
            android:layout_height="155dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="16dp"
            android:background="@drawable/shadow2"
            android:fontFamily="@font/aclonica"
            android:text="create"
            android:textColor="#fff"
            android:textSize="25sp"
            android:textStyle="bold"
            android:layout_marginRight="30dp"/>

        <Button
            android:id="@+id/buttonJoin"
            android:layout_width="155dp"
            android:layout_height="155dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="16dp"
            android:background="@drawable/shadow2"
            android:fontFamily="@font/aclonica"
            android:text="Join"
            android:textAlignment="center"
            android:textColor="#fff"
            android:textSize="25sp"
            android:textStyle="bold" />
    </LinearLayout>

    <ImageView
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:background="@drawable/collaboration" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:visibility="invisible"
        android:id="@+id/userName"
        android:maxLines="1"
        android:singleLine="true"
        android:background="@drawable/input_back"
        android:padding="10dp"
        android:layout_marginTop="10dp"
        android:fontFamily="sans-serif-condensed" />

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="86dp"
        android:layout_gravity="center_horizontal"
        android:rowCount="1"
        android:columnCount="2"
        android:id="@+id/privateGrid">

        <Button
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="private Chat"
            android:visibility="invisible"
            android:id="@+id/buttonPrivate"
            android:layout_row="0"
            android:layout_column="0"
            android:layout_gravity="center_horizontal"
            style="?android:textAppearanceSmall"
            android:layout_marginTop="16dp"
            android:textStyle="bold"
            android:background="@drawable/btn_live_dark"
            android:textSize="20sp"
            android:fontFamily="sans-serif-condensed"
            android:textColor="#000"/>

        <Button
            android:layout_width="250dp"
            android:layout_height="60dp"
            android:text="Chat or Share"
            android:id="@+id/buttonchat"
            android:layout_gravity="center_horizontal"
            android:layout_row="0"
            android:layout_column="1"
            style="?android:textAppearanceSmall"
            android:layout_marginTop="0dp"
            android:textStyle="bold"
            android:background="@drawable/shadow"
            android:textSize="20sp"
            android:fontFamily="@font/aclonica"
            android:textColor="#fff" />

    </GridLayout>

</LinearLayout>
